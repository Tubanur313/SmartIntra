@model IEnumerable<PositionListDto>

<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class="contact-details">
                     <div class="data_table_main table-responsive dt-responsive pb-15">
                        <table id="simpletable"
                               class="table
                     table-striped
                     table-bordered
                     nowrap">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Vəzifə</th>
                                    <th>Üst Vəzifə</th>
                                    <th>Şöbə</th>
                                    <th>Şirkət</th>
                                    @*<th>Status</th>*@
                                    @*<th>Silinmiş</th>*@
                                    @if (User.HasAccess("position.add"))
                                    {
                                        <th class="text-center">
                                            <button onclick="showInPopup('@Url.Action("Add","Position",null,Context.Request.Scheme)','Vəzifə əlavə et')" type="button" class="btn btn-outline-info"><i class="icofont icofont-plus m-0"></i></button>
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var position in Model)
                                {

                                    <tr>
                                        <td>
                                            #@position.Id
                                        </td>
                                        <td>@position.Name</td>

                                        @if (position.Parent != null)
                                        {
                                            <td> @position.Parent.Name</td>
                                        }
                                        else
                                        {
                                            <td>
                                                Təyin edilməyib
                                            </td>

                                        }
                                        @if (position.Department != null)
                                        {
                                            <td> @position.Department.Name</td>
                                        }
                                        else
                                        {
                                            <td>
                                                Təyin edilməyib
                                            </td>

                                        }
                                        @if (position.Company != null)
                                        {
                                            <td> @position.Company.Name</td>
                                        }
                                        else
                                        {
                                            <td>
                                                Təyin edilməyib
                                            </td>
                                        }
                                        @*<td><span class="badge badge-@(position.IsDeleted? "warning" : "success")">@(position.IsDeleted ? "Inactive" : "Active" )</span></td>*@
                                        @*@if (position.DeleteByUserId == null)
                                            {*@
                                        <td class="dropdown text-center">
                                            <button type="button"
                                                class="btn btn-outline-info"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                <i class="fa fa-list-ul"></i>
                                            </button>
                                            <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                @if (User.HasAccess("department.update"))
                                                {
                                                    <li>
                                                        <button onclick="showInPopup('@Url.Action("Update","Position",new {id=position.Id},Context.Request.Scheme)','Yenilə')"
                                                        class="btn  btn-default waves-effect md-trigger text-warning">
                                                            <i class="icofont  icofont-edit text-warning  p-r-15"></i>
                                                            Yenilə
                                                        </button>
                                                    </li>
                                                }
                                                @if (User.HasAccess("department.delete"))
                                                {
                                                    <li>
                                                        <button onclick="removeItem(@position.Id,`@position.Name`,`@Url.Action("Delete","Position").ToString()`)"
                                                        class="btn btn-default waves-effect md-trigger  text-danger">
                                                            <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                            Sil
                                                        </button>
                                                    </li>
                                                }
                                            </ul>
                                        </td>
                                        @*}
                                            else
                                            {
                                            <td class="dropdown text-center">
                                            <button disabled type="button"
                                            class="btn
                                            btn-outline-danger"
                                            data-toggle="dropdown"
                                            aria-haspopup="true"
                                            aria-expanded="false">
                                            <i class="fa fa-list-ul"></i>
                                            </button>
                                            </td>
                                            }*@
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>        <!-- Job description card end -->
        </div>
    </div>

</div>