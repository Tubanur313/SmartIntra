@model CategoryTicketUpdateDto

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <form asp-action="Update" enctype="multipart/form-data" class="main-signin-form">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel">  Ad: </label>
                        <input type="text" class="form-control" asp-for="Name" autocomplete="off">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <span class="messages"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel"> Üst Kateqoriya:</label>
                        <select name="select" asp-for="ParentId" name="ParentId" class="form-control">
                            <option value="" selected hidden>Seçim edin</option>
                            @foreach (var item in ViewBag.categories)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel"> Ticket Növü: </label>

                        <select name="select" asp-for="TicketType" name="TicketType" class="form-control">
                            <option value="" selected hidden>Seçim edin</option>
                            @foreach (TicketType type in @Enum.GetValues(typeof(TicketType)))
                            {
                                <option value="@type">@type.GetDisplayName()</option>
                            }
                            <span asp-validation-for="TicketType" class="text-danger"></span>
                        </select>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel"> Dəstək:</label>
                        <select name="select" asp-for="SupporterId" name="SupporterId" class="form-control">
                            <option value="" selected hidden>Seçim edin</option>
                            @foreach (AppUserDetailsDto item in ViewBag.supporters)
                            {
                                <option value="@item.Id">@item.FullName | @item.Company | @item.Department | @item.Position</option>
                            }
                        </select>
                    </div>
                </div>
               @* <div class="col-sm-6">
                    <div class="form-radio form-group">
                        <div class="radio radio-inline">
                            <label for="True">
                                <input type="radio" id="True" value="True" asp-for="IsDeleted"
                                       checked="checked">
                                <i class="helper"></i> Deactive
                            </label>
                        </div>
                        <div class="radio radio-inline">
                            <label for="False">
                                <input type="radio" id="False" value="False" asp-for="IsDeleted">
                                <i class="helper"></i> Active
                            </label>
                        </div>
                    </div>
                </div>*@
            </div>
            <div class="form-group row">
                <div class="col-sm-12 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary m-b-0 btn-block">
                        Təsdiqlə
                    </button>

                </div>
            </div>
        </form>
    </div>

</div>
<!-- cust-validation js -->
<script src="~/files/lib/cust_ajax/cust-validation.js"></script>

@await Html.PartialAsync("_ValidationScriptsPartial")

