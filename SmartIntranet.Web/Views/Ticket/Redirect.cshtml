@model TicketRedirectDto
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <form asp-action="Redirect">
            <div class="form-group">
                <input hidden class="form-control" asp-for="Id" autocomplete="off">
                <label class="floatLabel">  Dəstək Verən: </label>
                <select asp-for="SupporterId" name="SupporterId" class="form-control">
                    <option value="" hidden disabled selected>Seçim edin</option>
                    @foreach (AppUserDetailsDto item in ViewBag.users)
                    {
                        <option value="@item.Id">@item.FullName | @item.Company | @item.Department | @item.Position</option>
                    }

                </select>
                <span asp-validation-for="SupporterId" class="text-danger"></span>
            </div>
            <div class="col-sm-12 d-flex justify-content-between">
                <button type="submit" id="confirm-id" class="btn btn-primary m-b-0 btn-block">
                    Təsdiqlə
                </button>

            </div>
        </form>
    </div>
</div>