@model List<DiscussionListSecondDto>
@if (Model.Count > 0)
{
    @foreach (var disc in Model.OrderByDescending(x => x.CreatedDate))
    {
        <div class="media">
            <div class="media-body b-b-theme social-client-description">
                <div class="chat-header text-success">
                    @disc.IntranetUser.FullName  /
                    @(disc.IntranetUser.Company == null ? "Təyin Olunmayıb" : disc.IntranetUser.Company.Name)/
                    @(disc.IntranetUser.Department == null ? "Təyin Olunmayıb" : disc.IntranetUser.Department.Name)/
                    @(disc.IntranetUser.Position == null ? "Təyin Olunmayıb" : disc.IntranetUser.Position.Name)
                    <span class="text-muted">
                        @disc.CreatedDate
                    </span>
                </div>

                <p class="text-muted">
                    @Html.Raw(@disc.Content)
                </p>
            </div>
        </div>
    }
}
