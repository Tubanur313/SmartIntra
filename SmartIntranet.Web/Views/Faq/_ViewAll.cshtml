@model IEnumerable<FaqListDto>

<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class="contact-details">
                    <div class="data_table_main table-responsive dt-responsive">
                        <table id="simpletable"
                               class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>№</th>
                                    <th>Kateqoriya</th>
                                    <th>Sual</th>
                                    <th class="text-center">
                                        @if (User.HasAccess("faq.add"))
                                        {
                                            <button onclick="showInPopup('@Url.Action("Add","Faq",null,Context.Request.Scheme)','FAQ əlavə et')" type="button" class="btn btn-outline-success rounded-circle"><i class="icofont icofont-plus m-0"></i></button>
                                        }
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var faq in Model)
                                {

                                    <tr>
                                        <td>
                                            #@faq.Id
                                        </td>
                                        <td>@faq.FaqCategory.GetDisplayName()</td>
                                        <td>@faq.Question</td>
                                        <td class="dropdown text-center">
                                            <button type="button"
                                                class="btn
                                                btn-outline-info
                                                @*dropdown-toggle*@"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                <i class="fa fa-list-ul"></i>
                                            </button>
                                            <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                @if (User.HasAccess("faq.update"))
                                                {
                                                    <li>
                                                        <button onclick="showInPopup('@Url.Action("Update","Faq",new {id=faq.Id},Context.Request.Scheme)','Yenilə')"
                                                        class="btn  btn-default waves-effect md-trigger text-warning">
                                                            <i class="icofont  icofont-edit text-warning  p-r-15"></i>
                                                            Yenilə
                                                        </button>
                                                    </li>
                                                }
                                                @if (User.HasAccess("faq.delete"))
                                                {
                                                    <li>
                                                        <button onclick="removeItemWithoutReloud(@faq.Id,`@faq.Question`,`@Url.Action("Delete","Faq").ToString()`,this)"
                                                        class="btn btn-default waves-effect md-trigger  text-danger">
                                                            <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                            Sil
                                                        </button>
                                                    </li>
                                                }

                                            </ul>
                                        </td>

                                    </tr>

                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>        <!-- Job description card end -->
        </div>
    </div>

</div>