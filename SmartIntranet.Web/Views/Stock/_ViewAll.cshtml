@model IList<StockListDto>


<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class="card-block contact-details">
                    <div class="data_table_main table-responsive dt-responsive">
                        <table id="simpletable"
                               class="table
                     table-striped
                     table-bordered
                     nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>Şirkət</th>
                                    <th>Kateqoriya</th>
                                    <th>İstifadəçi</th>
                                    <th>MacAddress</th>
                                    <th>İnventar etiket kodu</th>
                                    <th>Dəyər</th>
                                    <th>Status</th>
                                    @if (User.HasAccess("stock.add"))
                                    {
                                        <th class="text-center">
                                            <button onclick="showInPopup('@Url.Action("Add","Stock",null,Context.Request.Scheme)','İnventar əlavə et')" type="button" class="btn btn-outline-success rounded-circle"><i class="icofont icofont-plus m-0"></i></button>
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stock in Model)
                                {
                                    <tr data-toggle="tooltip"
                                    data-html="true"
                                    data-placement="right" title= "Ətraflı: @Html.Raw(stock.Description)">
                                        <td>
                                            @stock.Id
                                        </td>
                                        <td>
                                            @stock.Name
                                        </td>
                                        @if (!(stock.StockCategory is null))
                                        {
                                            <td> @stock.StockCategory.Name</td>
                                        }
                                        else
                                        {
                                            <td>
                                                Təyin edilməyib
                                            </td>

                                        }
                                        @if (!(stock.Company is null))
                                        {
                                            <td> @stock.Company.Name</td>
                                        }
                                        else
                                        {
                                            <td>
                                                Təyin edilməyib
                                            </td>

                                        }
                                        @if (stock.IntranetUser is null)
                                        {
                                            <td>
                                                @("Təyin Olunmayıb")
                                            </td>
                                        }
                                        else
                                        {
                                            <td data-toggle="tooltip"
                                        data-html="true"
                                        data-placement="top" title="
                                            @(stock.IntranetUser.Company == null ? "Təyin Olunmayıb" : stock.IntranetUser.Company.Name)/
                                            @(stock.IntranetUser.Department == null ? "Təyin Olunmayıb" : stock.IntranetUser.Department.Name)/
                                            @(stock.IntranetUser.Position == null ? "Təyin Olunmayıb" : stock.IntranetUser.Position.Name)">
                                                @stock.IntranetUser.FirstName @stock.IntranetUser.LastName
                                            </td>
                                        }
                                        <td>
                                            @stock.MacAddress
                                        </td>
                                        <td>
                                            @stock.SKU
                                        </td>
                                        <td>
                                            @stock.Price
                                        </td>  
                                        <td class="text-center">
                                            <span class="badge badge-@(stock.Status==true?"success":"warning")">
                                               @(stock.Status==true?"Istifadə olunur":"Rezerv")
                                            </span>
                                        </td>
                                        <td class="dropdown text-center">
                                            <button type="button"
                                                class="btn
                                                btn-outline-info
                                                @*dropdown-toggle*@"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                <i class="fa fa-list-ul"></i>
                                            </button>
                                            <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                @if (User.HasAccess("stock.update"))
                                                {
                                                    <li>
                                                        <button onclick="showInPopup('@Url.Action("Update","Stock",new {id=stock.Id},Context.Request.Scheme)','Yenilə')"
                                                        class="btn  btn-default waves-effect md-trigger text-warning">
                                                            <i class="icofont  icofont-edit text-warning  p-r-15"></i>
                                                            Yenilə
                                                        </button>
                                                    </li>
                                                }
                                                @if (User.HasAccess("stock.delete"))
                                                {
                                                    <li>
                                                        <button onclick="removeItem(@stock.Id,`@stock.Name`,`@Url.Action("Delete","stock").ToString()`)"
                                                        class="btn btn-default waves-effect md-trigger  text-danger">
                                                            <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                            Sil
                                                        </button>
                                                    </li>
                                                }
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>Şirkət</th>
                                    <th>Kateqoriya</th>
                                    <th>İstifadəçi</th>
                                    <th>MacAddress</th>
                                    <th>İnventar etiket kodu</th>
                                    <th>Dəyər</th>
                                    <th>Status</th>
                                    <th class="text-center">-----</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>