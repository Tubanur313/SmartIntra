<script class = "removable" >
$.validator.setDefaults({
    ignore: ''
});
$(document).ready(function() {
    // ckeditor
    CKEDITOR.replace('Description');
    //CKEDITOR.replace('PermissionAddDto.Reason');

    const $tableID = $('#table');
    const $BTN = $('#export-btn');
    const $EXPORT = $('#export');
    const newTr = `<tr class="editTable" value-id="" >
            <td><textarea style="width: 100px;" name="Product" id="Product"></textarea> </td>
            <td><textarea style="width: 100px;" name="Currency" id="Currency"></textarea> </td>
            <td><textarea style="width: 100px;" name="Quantity" id="Quantity"></textarea> </td>
            <td><textarea style="width: 100px;" name="WithoutVat" id="WithoutVat"></textarea> </td>
            <td><textarea style="width: 100px;" name="TotalWithoutTax" id="TotalWithoutTax"></textarea> </td>
            <td><textarea style="width: 100px;" name="TaxType" id="TaxType"></textarea> </td>
            <td><textarea style="width: 100px;" name="Total" id="Total" (oninput)="validateValue(event)">0</textarea> </td>
            <td><textarea style="width: 100px;" name="Seller" id="Seller"></textarea> </td>
            <td><textarea style="width: 100px;" name="Description" id="Description"></textarea> </td>
                 <td>
                   <span style="width: 30px; height: 30px; line-height: inherit;" class="table-remove btn btn-inverse btn-outline-danger btn-icon"><i class="fa fa-times" style="margin-right:1px;" aria-hidden="true"></i></span>
                 </td>
               </tr>`;
    $('.table-add').on('click', 'i', () => {
        $('#generated').append(newTr);
        $('#purchasingAdd').DataTable({
            retrieve: true,
            "ordering": false,
            paging: false,
            dom: 'Bfrtip',
            buttons: [
                'excel'
            ]
        });
    });
    $tableID.on('click', '.table-remove', function() {
        var id = $(this).parent().parent().attr('value-id');
        $(this).parents('tr').detach();
        $.ajax({
            type: 'get',
            url: '@Url.ActionLink("Delete","Order")',
            datatype: 'json',
            data: {
                id: id
            },
            success: function(response) {
                if (response.error == true) {
                    toastr.error(response.message, "Xəta baş verdi!");
                    return;
                }
                var r = 0;
                $("textarea[name='Total']:visible").each(function(index) {


                    if (parseFloat($(this).val()) === NaN) {
                        r += 0;
                    } else {
                        r += parseFloat($(this).val());
                    }
                });
                $("#GrandTotal").val(parseFloat(r).toFixed(2));
                var gTotal = $("#GrandTotal").val();
                var ticketId = $("#table").attr('ticket-Id');
                $.ajax({
                    type: 'get',
                    url: '@Url.ActionLink("GrandTotal","ticket")',
                    datatype: 'json',
                    data: ({
                        gTotal: gTotal,
                        ticketId: ticketId
                    }),
                    success: function(response) {},
                    error: function(response) {}
                });

                toastr.success(response.message, "Uğurla Silindi!");
            },
            error: function(response) {
                toastr.error("Gözlənilməz xəta baş verdi", "Xəta!");
            }
        });
    });
    $tableID.on('click', '.table-up', function() {
        const $row = $(this).parents('tr');
        if ($row.index() === 0) {
            return;
        }
        $row.prev().before($row.get(0));
    });
    $tableID.on('click',
        '.table-down',
        function() {
            const $row = $(this).parents('tr');
            $row.next().after($row.get(0));
        });
    jQuery.fn.pop = [].pop;
    jQuery.fn.shift = [].shift;
    $BTN.on('click', () => {
        const $rows = $tableID.find('tr:not(:hidden)');
