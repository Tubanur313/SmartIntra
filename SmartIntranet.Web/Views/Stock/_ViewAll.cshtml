@model IList<StockListDto>
<style>
    .blobs-container {
        display: inline-flex;
    }
    .blob {
        background: black;
        border-radius: 50%;
        box-shadow: 0 0 0 0 rgba(0, 0, 0, 1);
        margin: 10px;
        height: 20px;
        width: 20px;
        transform: scale(1.3);
        animation: pulse-black 2s infinite;
    }
        .blob.red {
            background: rgba(255, 82, 82, 1);
            box-shadow: 0 0 0 0 rgba(255, 82, 82, 1);
            animation: pulse-red 2s infinite;
        }
        .blob.teal {
            background: #01a9ac;
            box-shadow: 0 0 0 0 rgba(255, 82, 82, 1);
            animation: pulse-teal 2s infinite;
        }
    @@keyframes pulse-red {
        0% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(255, 82, 82, 0.7);
        }
        70% {
            transform: scale(1);
            box-shadow: 0 0 0 10px rgba(255, 82, 82, 0);
        }
        100% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(255, 82, 82, 0);
        }
    }
        @@keyframes pulse-teal {
        0% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(0, 50.2, 50.2, 0.7);
        }
        70% {
            transform: scale(1);
            box-shadow: 0 0 0 10px rgba(0, 50.2, 50.2, 0);
        }
        100% {
            transform: scale(0.95);
            box-shadow: 0 0 0 0 rgba(0, 50.2, 50.2, 0);
        }
    }
</style>

<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class="card-block contact-details">
                    <div class="data_table_main table-responsive dt-responsive">
                        <table id="inventar"
                               class="table
                     table-striped
                     table-bordered
                     nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>İstifadəçi</th>
                                    @*<th>MacAddress</th>*@
                                    <th>İnventar etiket kodu</th>
                                    <th>Status</th>
                                    @if (User.HasAccess("stock.add"))
                                    {
                                        <th class="text-center">
                                            <button onclick="showInPopup('@Url.Action("Add","Stock",null,Context.Request.Scheme)','İnventar əlavə et')" type="button" class="btn btn-outline-success rounded-circle"><i class="icofont icofont-plus m-0"></i></button>
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var stock in Model)
                                {
                                    <tr>
                                        <td>
                                            @stock.Id
                                        </td>
                                        <td>
                                            @stock.Name
                                        </td>

                                        @if (stock.IntranetUser is null)
                                        {
                                            <td>
                                                @("Təyin Olunmayıb")
                                            </td>
                                        }
                                        else
                                        {
                                            <td data-toggle="tooltip"
                                        data-html="true"
                                        data-placement="top" title="
                                            @(stock.IntranetUser.Company == null ? "Təyin Olunmayıb" : stock.IntranetUser.Company.Name)/
                                            @(stock.IntranetUser.Department == null ? "Təyin Olunmayıb" : stock.IntranetUser.Department.Name)/
                                            @(stock.IntranetUser.Position == null ? "Təyin Olunmayıb" : stock.IntranetUser.Position.Name)">
                                                @stock.IntranetUser.Name @stock.IntranetUser.Surname
                                            </td>
                                        }
                                        @*                                        <td>
                                            @stock.MacAddress
                                            </td>*@
                                        <td>
                                            @stock.SKU
                                        </td>
                                        <td class="text-center">
                                            <span class="blobs-container">
                                                <span class="blob @(stock.IntranerUserId!=null?"teal":"red")">
                                                    @*@(stock.IntranerUserId!=null? Html.Raw("<i class='icofont icofont-plus'></i>"):Html.Raw("<i class='icofont icofont-minus'></i>"))*@
                                                </span>
                                            </span>
                                        </td>
                                        <td class="dropdown text-center">
                                            <button type="button"
                                                class="btn
                                                btn-outline-info
                                                @*dropdown-toggle*@"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                <i class="fa fa-list-ul"></i>
                                            </button>
                                            <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                @if (User.HasAccess("stock.update"))
                                                {
                                                    <li>
                                                        <button onclick="showInPopup('@Url.Action("Update","Stock",new {id=stock.Id},Context.Request.Scheme)','Yenilə')"
                                                        class="btn  btn-default waves-effect md-trigger text-warning">
                                                            <i class="icofont  icofont-edit text-warning  p-r-15"></i>
                                                            Yenilə
                                                        </button>
                                                    </li>
                                                }
                                                @if (User.HasAccess("stock.detail"))
                                                {
                                                    <li>
                                                        <button onclick="showInPopup('@Url.Action("Detail","Stock",new {id=stock.Id},Context.Request.Scheme)','Ətraflı')"
                                                        class="btn  btn-default waves-effect md-trigger text-info">
                                                            <i class="icofont icofont-info-circle text-info  p-r-15"></i>
                                                            Ətraflı
                                                        </button>
                                                    </li>
                                                }
                                                @if (User.HasAccess("stock.delete"))
                                                {
                                                    <li>
                                                        <button onclick="removeItem(@stock.Id,`@stock.Name`,`@Url.Action("Delete","Stock").ToString()`)"
                                                        class="btn btn-default waves-effect md-trigger  text-danger">
                                                            <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                            Sil
                                                        </button>
                                                    </li>
                                                }
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>İstifadəçi</th>
                                    @*<th>MacAddress</th>*@
                                    <th>İnventar etiket kodu</th>
                                    <th>Status</th>
                                    <th class="text-center">-----</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>