@model CategoryUpdateDto

@{
    Layout = null;
}
<link rel="stylesheet" type="text/css" href="~/files/lib/jquery-easyui-1.10.4/themes/bootstrap/easyui.css">

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <form asp-action="Update" enctype="multipart/form-data" class="main-signin-form">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel">  Ad: </label>
                        <input type="text" class="form-control" asp-for="Name" autocomplete="off">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <span class="messages"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <label class="floatLabel">   Üst Kateqoriya: </label>
                    <div style="margin-bottom:20px">
                        <input type="text" class="form-control" asp-for="ParentId" name="ParentId" style="width:100%">
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary m-b-0 btn-block">
                        Təsdiqlə
                    </button>

                </div>
            </div>
        </form>
    </div>

</div>
<!-- cust-validation js -->
<script src="~/files/lib/cust_ajax/cust-validation.js"></script>
<script type="text/javascript" src="~/files/lib/jquery-easyui-1.10.4/jquery.easyui.min.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")
<script class="removable" type="text/javascript">
    $(document).ready(function ($) {

        $.ajax({
            url: `@Url.Action("GetCategoryTree","Category")`,
            type: "Get",
            data: "",
            dataType: "json",
            cache: false,
            success: function (data) {
                $('#ParentId').combotree({
                    data:data,
                    prompt:'Seçim edin'
                });
            },
            error: function (data) {
            }
        });
    });
</script>

