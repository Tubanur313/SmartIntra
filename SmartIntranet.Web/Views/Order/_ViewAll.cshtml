@model IEnumerable<OrderListDto>

<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class="card-block contact-details">
                    <div class="data_table_main table-responsive dt-responsive">
                        <table id="simpletable"
                               class="table
                     table-striped
                     table-bordered
                     nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Məhsul</th>
                                    <th>Ö/V</th>
                                    <th>Say</th>
                                    <th>
                                        Vahid qiymət
                                        (ƏDV xaric)
                                    </th>
                                    <th>
                                        Cəmi
                                        (vergi xaric)
                                    </th>
                                    <th>
                                        Vergi
                                        növü
                                    </th>
                                    <th>
                                        Yekun
                                        (V/D)
                                    </th>
                                    <th>
                                        Satıcı
                                    </th>
                                    <th>Qeydlər</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.Product</td>
                                        <td>@order.Currency</td>
                                        <td>@order.Quantity</td>
                                        <td>@order.WithoutVat</td>
                                        <td>@order.TotalWithoutTax</td>
                                        <td>@order.TaxType</td>
                                        <td>@order.Total</td>
                                        <td>@order.Seller</td>
                                        <td>@order.Description</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>        <!-- Job description card end -->
        </div>
    </div>

</div>