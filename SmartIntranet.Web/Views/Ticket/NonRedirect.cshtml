@model List<TicketListDto>
@{
    ViewData["Title"] = "Yönlənməyən Ticket Siyahısı";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<!-- Page-header start -->
<div class="page-header">
    <div class="row justify-content-between">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Yönlənməyən Ticket Siyahısı</h4>
                </div>
            </div>
        </div>


    </div>
</div>
<div class="row">
    <div class="col-sm-12">

        <div class="card">

            <form asp-action="NonRedirect" method="post" class="card-block">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="floatLabel">  Kateqoriya: </label>
                            <select id="CategoryTicketId" name="CategoryTicketId" class="form-control">
                                <option value="" selected>Hamısı</option>
                                @foreach (var item in ViewBag.categories)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="floatLabel">  Şirkət: </label>
                            <select id="CompanyId" name="CompanyId" class="form-control">
                                <option value="" selected>Hamısı</option>
                                @foreach (var item in ViewBag.company)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }

                            </select>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group">
                            <label class="floatLabel">  Status: </label>
                            <select id="StatusType" name="StatusType" class="form-control">
                                <option value="" selected>Hamısı</option>
                                @foreach (StatusType type in @Enum.GetValues(typeof(StatusType)))
                                {
                                    <option value="@type">@type.GetDisplayName()</option>
                                }

                            </select>
                        </div>
                    </div>

                    <div class=" col-sm-3 mt-4">
                        <button type="submit" id="send-filter" class="btn btn-success btn-round btn-block">
                            Təsdiqlə
                        </button>
                    </div>
                </div>

            </form>
        </div>

    </div>
</div>
<div id="view-all">
    @await Html.PartialAsync("_ViewAll", Model)
</div>

