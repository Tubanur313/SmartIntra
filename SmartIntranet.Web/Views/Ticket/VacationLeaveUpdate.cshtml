@model VacationLeaveUpdateDto
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12 col-xl-12">
        <form asp-action="VacationLeaveUpdate">
            <input hidden class="form-control" asp-for="TicketId" autocomplete="off">
            <input hidden class="form-control" asp-for="VacationCreateDate" autocomplete="off">

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel">  Məzuniyyət Növü: </label>
                        <select asp-for="VacationKind" class="form-control">
                            <option value="" hidden disabled selected>Seçim edin</option>
                            @foreach (VacationKind type in @Enum.GetValues(typeof(VacationKind)))
                            {
                                <option value="@type">@type.GetDisplayName()</option>
                            }
                        </select>
                        <span asp-validation-for="VacationKind" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel">Məzuniyyət müddəti: </label>
                        <input type="number" class="form-control " asp-for="Vacationlength" autocomplete="off">
                        <span class="messages"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel">  Başlama Tarixi: </label>
                        <input type="date" class="form-control" asp-for="StartDate" autocomplete="off">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel">  Bitmə Tarixi: </label>
                        <input type="date" class="form-control" asp-for="EndDate" autocomplete="off">
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 d-flex justify-content-between">
                    <button type="submit" id="confirm-id" class="btn btn-dark-blue m-b-0 btn-block">
                        Təsdiqlə
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")
