@model TicketCategoryDto
@{
    Layout = null;
}
<!-- combotree -->
<link rel="stylesheet" type="text/css" href="~/files/lib/jquery-easyui-1.10.4/themes/bootstrap/easyui.css">

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <input hidden class="form-control" asp-for="Id" autocomplete="off">
        <form asp-action="CategoryTicket">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="floatLabel">  Kateqoriya: </label>
                    <div style="margin-bottom:20px">
                        <input type="text" class="form-control" asp-for="CategoryTicketId" style="width:100%">
                    </div>
                    <span asp-validation-for="CategoryTicketId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary m-b-0 btn-block">
                    Təsdiqlə
                </button>

            </div>
        </form>
    </div>
</div>
<!-- combotree -->
<script type="text/javascript" src="~/files/lib/jquery-easyui-1.10.4/jquery.easyui.min.js"></script>
<script class="removable" type="text/javascript">
    $(document).ready(function ($) {

        $.ajax({
            url: `@Url.Action("GetCategoryTicketTree","CategoryTicket")`,
            type: "Get",
            data: "",
            dataType: "json",
            cache: false,
            success: function (data) {
                $('#CategoryTicketId').combotree({
                    data:data,
                    prompt:'Seçim edin',
                    onBeforeSelect:function(node){
                    if(node.children.length > 0){
                        return false
                    }
                }
                });
            },
            error: function (data) {
            }
        });
    });
</script>