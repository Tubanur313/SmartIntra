@model IList<CategoryListDto>
<style>
    .modal-dialog.modal-lg.ui-draggable{
        position:relative !important;
    }
    .modal-dialog.modal-lg{
        position:relative !important;
    }
    .modal-dialog{
        position:relative !important;
    }
</style>

<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class=" contact-details">
                     <div class="data_table_main table-responsive dt-responsive pb-15">
                        <table id="simpletable"
                               class="table
                     table-striped
                     table-bordered
                     nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Kateqoriya</th>
                                    <th>Üst Kateqoriya</th>
                                    @if (User.HasAccess("category.add"))
                                    {
                                        <th class="text-center">
                                            <button onclick="showInPopup('@Url.Action("Add","Category",null,Context.Request.Scheme)','Kateqoriya əlavə et')" type="button" class="btn btn-outline-info"><i class="icofont icofont-plus m-0"></i></button>
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model)
                                {
                                    <tr>
                                        <td>
                                            @category.Id
                                        </td>
                                        <td>
                                            @category.Name
                                        </td>
                                        @if (!(category.Parent is null))
                                        {
                                            <td> @category.Parent.Name</td>
                                        }
                                        else
                                        {
                                            <td>
                                                Təyin edilməyib
                                            </td>
                                        }
                                        <td class="dropdown text-center">
                                            <button type="button"
                                                class="btn
                                                btn-outline-info
                                                @*dropdown-toggle*@"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                <i class="fa fa-list-ul"></i>
                                            </button>
                                            <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                @if (User.HasAccess("category.update"))
                                                {
                                                    <li>
                                                        <button onclick="showInPopup('@Url.Action("Update","Category",new {id=category.Id},Context.Request.Scheme)','Yenilə')"
                                                        class="btn  btn-default waves-effect md-trigger text-warning">
                                                            <i class="icofont  icofont-edit text-warning  p-r-15"></i>
                                                            Yenilə
                                                        </button>
                                                    </li>
                                                }
                                                @if (User.HasAccess("category.delete"))
                                                {
                                                    <li>
                                                        <button onclick="removeItem(@category.Id,`@category.Name`,`@Url.Action("Delete","Category").ToString()`)"
                                                        class="btn btn-default waves-effect md-trigger  text-danger">
                                                            <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                            Sil
                                                        </button>
                                                    </li>
                                                }
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Kateqoriya</th>
                                    <th>Üst Kateqoriya</th>
                                    <th class="text-center">-----</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>