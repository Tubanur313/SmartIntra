@model List<CheckListListDto>
<div class="page-body">
    <div class="row">
        <div class="col-lg-12 col-xl-12">
            <div class="card">
                <div class=" contact-details">
                    <div class="data_table_main table-responsive dt-responsive">
                        <table id="simpletable"
                               class="table
                     table-striped
                     table-bordered
                     nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    @if (User.HasAccess("checkList.add"))
                                    {
                                        <th class="text-center">
                                            <button onclick="showInPopup('@Url.Action("Add","checkList",null,Context.Request.Scheme)','Yoxlama əlavə et')" type="button" class="btn btn-outline-info"><i class="icofont icofont-plus m-0"></i></button>
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var checkList in Model)
                                {
                                    <tr>
                                        <td>
                                            @checkList.Id
                                        </td>
                                        <td>@checkList.Name</td>
                                        <td class="dropdown text-center">
                                            <button type="button"
                                                class="btn
                                                btn-outline-info
                                                @*dropdown-toggle*@"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                <i class="fa fa-list-ul"></i>
                                            </button>
                                            <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                @if (User.HasAccess("checkList.update"))
                                                {
                                                    <li>
                                                        <button onclick="showInPopup('@Url.Action("Update","checkList",new {id=checkList.Id},Context.Request.Scheme)','Yenilə')"
                                                        class="btn  btn-default waves-effect md-trigger text-warning">
                                                            <i class="icofont  icofont-edit text-warning  p-r-15"></i>
                                                            Yenilə
                                                        </button>
                                                    </li>
                                                }
                                                @if (User.HasAccess("checkList.delete"))
                                                {
                                                    <li>
                                                        <button onclick="removeItem(@checkList.Id,`@checkList.Name`,`@Url.Action("Delete","checkList").ToString()`)"
                                                        class="btn btn-default waves-effect md-trigger  text-danger">
                                                            <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                            Sil
                                                        </button>
                                                    </li>
                                                }
                                            </ul>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th class="text-center">-----</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>