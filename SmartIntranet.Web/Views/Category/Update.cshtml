@model CategoryUpdateDto

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <form asp-action="Update" enctype="multipart/form-data" class="main-signin-form">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel">  Ad: </label>
                        <input type="text" class="form-control" asp-for="Name" autocomplete="off">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <span class="messages"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel"> Üst Kateqoriya:</label>
                        <select name="select" asp-for="ParentId" name="ParentId" class="form-control">
                            <option value="" selected hidden>Seçim edin</option>
                            @foreach (var item in ViewBag.category)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary m-b-0 btn-block">
                        Təsdiqlə
                    </button>

                </div>
            </div>
        </form>
    </div>

</div>
<!-- cust-validation js -->
<script src="~/files/lib/cust_ajax/cust-validation.js"></script>

@await Html.PartialAsync("_ValidationScriptsPartial")

