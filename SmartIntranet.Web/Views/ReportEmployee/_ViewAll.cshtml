@model IEnumerable<ReportEmployeeListDto>

<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class="contact-details">
                    <div class="data_table_main table-responsive dt-responsive pb-15">
                        <table id="simpletable"
                               class="table
                     table-striped
                     table-bordered
                     nowrap">
                            <thead>
                                <tr>
                                    <th>№</th>
                                    <th>Şirkət</th>
                                    <th>Tarix</th>
                                    <th>Hesabatlıq tarixi</th>
                                    <th class="text-center">
                                        @if (User.HasAccess("reportEmployee.add"))
                                        {
                                            <button onclick="showInPopup('@Url.Action("Add","ReportEmployee",null,Context.Request.Scheme)','Hesabat əlavə et')" type="button" class="btn btn-outline-info"><i class="icofont icofont-plus m-0"></i></button>
                                        }
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reportEmployee in Model)
                                {

                                    <tr>
                                        <td>
                                            #@reportEmployee.Id
                                        </td>

                                        <td>@reportEmployee.Company.Name</td>
                                        <td>@reportEmployee.ReportDate.ToString("MM.yyyy")</td>
                                        <td>@reportEmployee.CreatedDate</td>
                                        @if (reportEmployee.DeleteByUserId == null)
                                        {
                                            <td class="dropdown text-center">
                                                <button type="button"
                                                class="btn
                                                btn-outline-info
                                                @*dropdown-toggle*@"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                    <i class="fa fa-list-ul"></i>
                                                </button>
                                                <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                    @if (User.HasAccess("reportEmployee.workTimesheet"))
                                                    {
                                                        <li>

                                                            <button class='btn btn-default waves-effect md-trigger  text-danger'>
                                                                <i class='icofont icofont-table text-secondary p-r-15'></i>
                                                                @Html.ActionLink("İlkin Hesabat","WorkTimesheet",reportEmployee,new { @class = "text-secondary"})
                                                            </button>
                                                        </li>
                                                    }
                                                    @if (User.HasAccess("reportEmployee.getSavedReport") && !reportEmployee.IsGenerated)
                                                    {
                                                        <li>
                                                            <button class='btn btn-default waves-effect md-trigger  text-danger'>
                                                                <i class='icofont icofont-spreadsheet text-primary p-r-15'></i>
                                                                @Html.ActionLink("Yenilənmiş Hesabat","GetSavedReport",new{id=reportEmployee.Id},new { @class = "text-primary"})
                                                            </button>
                                                        </li>
                                                    }
                                                    @if (User.HasAccess("reportEmployee.delete"))
                                                    {
                                                        <li>
                                                            <button onclick="removeItem(@reportEmployee.Id, `@reportEmployee.ReportDate`, `@Url.Action("Delete","ReportEmployee").ToString()`)"
                                                        class="btn btn-default waves-effect md-trigger  text-danger">
                                                                <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                                Sil
                                                            </button>
                                                        </li>
                                                    }
                                                </ul>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="dropdown text-center">
                                                <button disabled type="button"
                                                class="btn
                                                btn-outline-danger
                                                @*dropdown-toggle*@"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                    <i class="fa fa-list-ul"></i>
                                                </button>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

