    <div class="row">
        <div class="col-sm-6">
            <div class="form-group is-disabled">
                <label class="floatLabel">  Ad: </label>
                <input type="text" class="form-control" asp-for="Name" disabled autocomplete="off">
                <span asp-validation-for="Name" class="text-danger"></span>
                <span class="messages"></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group is-disabled">
                <label class="floatLabel">  Soyad: </label>
                <input type="text" class="form-control" asp-for="Surname" disabled autocomplete="off">
                <span asp-validation-for="Surname" class="text-danger"></span>
                <span class="messages"></span>
            </div>

        </div>
        <div class="col-sm-6">
            <div class="form-group " >
                <label class="floatLabel">  Email: </label>
                <input type="email"  class="form-control is-disabled" asp-for="Email" autocomplete="off">
                <span asp-validation-for="Email" class="text-danger"></span>
                <span class="messages"></span>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group is-disabled">
                <label class="floatLabel">  Şirkət: </label>
                <input type="text" class="form-control" asp-for="Company.Name" disabled autocomplete="off">
                <span class="messages"></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="floatLabel">  Ünvan: </label>
                <input type="text" class="form-control" asp-for="Address" placeholder="Yaşadığı ünvan" autocomplete="off">
                <span class="messages"></span>
            </div>

        </div>
        <div class="col-sm-6">
            <div class="form-group ">
                <label class="floatLabel">  Tel: </label>
                <input type="text"  class="form-control" asp-for="PhoneNumber" autocomplete="off">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                <span class="messages"></span>
            </div>

        </div>
        <div class="col-sm-6">
            <div class="form-group is-disabled">
                <label class="floatLabel">  Şöbə: </label>
                <input type="text" class="form-control" asp-for="Department.Name" disabled autocomplete="off">
                <span class="messages"></span>
            </div>

        </div>
        <div class="col-sm-6">
            <div class="form-group is-disabled">
                <label class="floatLabel">  Vəzifə: </label>
                <input type="text" class="form-control" asp-for="Position.Name" disabled autocomplete="off">
                <span class="messages"></span>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="floatLabel">  Doğum tarixi: </label>
                <input type="date" class="form-control" asp-for="Birthday" disabled autocomplete="off">
                <span class="messages"></span>
            </div>
        </div>

        @if (Model.UserContractFiles.Count>0)
       {
                   <div class="col-sm-6">
            <div class="form-group">
                <label class="">  Müqavilə: </label>
                <div class="card">

                    <ul class="basic-list list-icons">
                        @foreach (var item in Model.UserContractFiles)
                        {
                            <li class="mt-1 ml-3">
                                <i class="fa-solid fa-file-arrow-down text-primary" style="font-size: 22px;">
                                    <a href="~/userContractDocs/@item.FilePath" download
                                   style="padding-left: 16px;">

                                        @item.CreatedDate.Value.ToString("yyyy-MM-dd-mm-ss")
                                    </a>
                                </i>
                            </li>
                        }

                    </ul>

                </div>
            </div>
        </div>
       }

    </div>

    <div class="form-group row">
        <div class="col-sm-12 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary m-b-0 btn-block">
                Təsdiq
            </button>

        </div>
    </div>

</form>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


