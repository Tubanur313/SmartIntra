@model IEnumerable<WorkGraphicListDto>

<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class="card-block contact-details">
                    <div class="data_table_main table-responsive dt-responsive">
                        <table id="simpletable"
                               class="table
                     table-striped
                     table-bordered
                     nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>Təsvir</th>
                                    <th>İş Qrafiki ili</th>
                                    <th class="text-center">
                                        @if (User.HasAccess("workgraphic.add"))
                                        {
                                            <button onclick="showInPopup('@Url.Action("Add","WorkGraphic",null,Context.Request.Scheme)','İş Qrafiki əlavə et')" type="button" class="btn btn-outline-success rounded-circle"><i class="icofont icofont-plus m-0"></i></button>
                                        }
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var workgraphic in Model)
                                {

                                <tr>
                                    <td>
                                        @workgraphic.Id
                                    </td>

                                    <td>@workgraphic.Name</td>
                                    @if (workgraphic.Description != null)
                                    {
                                        <td> @workgraphic.Description</td>
                                    }
                                    else
                                    {
                                        <td>
                                            Təyin edilməyib
                                        </td>

                                    }
                                    @if (workgraphic.NonWorkingYear != null)
                                    {
                                        <td> @workgraphic.NonWorkingYear.Year</td>
                                    }
                                    else
                                    {
                                        <td>
                                            Təyin edilməyib
                                        </td>

                                    }

                                    @if (workgraphic.DeleteByUserId == null)
                                    {
                                        <td class="dropdown text-center">
                                            <button type="button"
                                                    class="btn
                                                btn-outline-info
                                                @*dropdown-toggle*@"
                                                    data-toggle="dropdown"
                                                    aria-haspopup="true"
                                                    aria-expanded="false">
                                                <i class="fa fa-list-ul"></i>
                                            </button>
                                            <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                @if (User.HasAccess("workgraphic.update"))
                                                {
                                                    <li>
                                                        <button onclick="showInPopup('@Url.Action("Update","WorkGraphic",new {id=workgraphic.Id},Context.Request.Scheme)','Yenilə')"
                                                                class="w-100 text-left btn  btn-default waves-effect md-trigger text-warning">
                                                            <i class="icofont  icofont-edit text-warning  p-r-15"></i>
                                                            Yenilə
                                                        </button>
                                                    </li>
                                                }
                                                @if (User.HasAccess("workcalendar.list"))
                                                {
                                            <li>
                                                <a asp-controller="WorkCalendar" asp-action="list" asp-route-id="@workgraphic.Id" asp-route-year_id="@workgraphic.NonWorkingYearId" class="btn  btn-default waves-effect md-trigger text-primary not-focus not-hover">
                                                    <i class="icofont icofont-list text-primary p-r-15 "></i>  Detala keçid
                                                </a>
                                            </li>
                                                }
                                                @if (User.HasAccess("workgraphic.delete") && workgraphic.Key!= "five_day" && workgraphic.Key != "six_day")
                                                {
                                                    <li>
                                                        <button onclick="removeItem(@workgraphic.Id,`@workgraphic.Name`,`@Url.Action("Delete","WorkGraphic").ToString()`)"
                                                                class="btn btn-default waves-effect md-trigger  text-danger">
                                                            <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                            Sil
                                                        </button>
                                                    </li>
                                                }

                                            </ul>
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="dropdown text-center">
                                            <button disabled type="button"
                                                    class="btn
                                                btn-outline-danger
                                                @*dropdown-toggle*@"
                                                    data-toggle="dropdown"
                                                    aria-haspopup="true"
                                                    aria-expanded="false">
                                                <i class="fa fa-list-ul"></i>
                                            </button>
                                        </td>
                                    }


                                </tr>

                                }
                            </tbody>


                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>Təsvir</th>
                                    <th>İş Qrafiki ili</th>
                                    <th class="text-center">-----</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>        <!-- Job description card end -->
        </div>
    </div>

</div>