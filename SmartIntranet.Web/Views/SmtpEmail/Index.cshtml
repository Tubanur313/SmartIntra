@model EmailListDto
@{
    Layout = $"~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-lg-12 col-xl-12">
        <div class="card card-block">
     <form asp-action="Index">
            <div class="tab-pane active" id="home1" role="tabpanel">
                <div class="row">
                    <input type="hidden" asp-for="Id" />
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="floatLabel">  Admin: </label>
                            <input type="text" class="form-control" asp-for="UserName" autocomplete="off">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                            <span class="messages"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="floatLabel">  Şifrə: </label>
                            <input type="text" class="form-control" asp-for="Password" autocomplete="off">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <span class="messages"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="floatLabel">  Host: </label>
                            <input type="text" class="form-control" asp-for="Host" autocomplete="off">
                            <span asp-validation-for="Host" class="text-danger"></span>
                            <span class="messages"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="floatLabel">  Port: </label>
                            <input type="number" class="form-control" asp-for="Port" autocomplete="off">
                            <span asp-validation-for="Port" class="text-danger"></span>
                            <span class="messages"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="floatLabel">  FromEmail: </label>
                            <input type="text" class="form-control" asp-for="FromEmail" autocomplete="off">
                            <span asp-validation-for="FromEmail" class="text-danger"></span>
                            <span class="messages"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="floatLabel">  BaseUrl: </label>
                            <input type="text" class="form-control" asp-for="BaseUrl" autocomplete="off">
                            <span asp-validation-for="BaseUrl" class="text-danger"></span>
                            <span class="messages"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <label class="floatLabel">  IsSSL: </label>
                            <div class="checkbox">
                                <input asp-for="IsSSL" type="checkbox" class="js-switch check_switch" data-size="small">
                            </div>
                    </div>
                    <div class="col-sm-6">
                        <label class="floatLabel">  IsDefault: </label>
                        <div class="checkbox">
                            <input asp-for="IsDefault" type="checkbox" class="js-switch check_switch" data-size="small">
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-sm-12 d-flex justify-content-between">
                    <button id="sending" type="submit" class="btn btn-dark-blue m-b-0 btn-block">
                        Təsdiqlə
                    </button>

                </div>
            </div>
        </form>
  
        </div>
     </div>

</div>
@section CrudJs{
<!-- delete_ajax-->
<script src="~/files/lib/cust_ajax/delete_ajax.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")
}
