@model BusinessTravelUpdateDto
@{
    Layout = null;
}
<div class="row">
    <div class="col-lg-12 col-xl-12">
        <form asp-action="BusnessTravelUpdate">
            <input hidden class="form-control" asp-for="TicketId" autocomplete="off">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="floatLabel">Ezamiyyət Yeri: </label>
                                    <select  asp-for="PlaceId" class="form-control">
                                        <option value="" selected disabled hidden>Seçim edin</option>
                                        @foreach (var item in ViewBag.places)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="PlaceId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="floatLabel">Ezamiyyət Əsası: </label>
                                    <select  asp-for="CauseId" class="form-control">
                                        <option value="" selected disabled hidden>Seçim edin</option>
                                        @foreach (var item in ViewBag.cause)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                    <span asp-validation-for="CauseId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="floatLabel">  Başlama Tarixi: </label>
                                    <input  type="date" class="form-control" asp-for="StartDate" autocomplete="off">
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="floatLabel">  Bitmə Tarixi: </label>
                                    <input  type="date" class="form-control" asp-for="EndDate" autocomplete="off">
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-3 ">
                                <label>  Yerləşmə: </label>
                                <div class="checkbox">
                                    <input  asp-for="Accommodation" type="checkbox" class="check_switch" data-size="small">
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <label>  Nəqliyyat: </label>
                                <div class="checkbox">
                                    <input  asp-for="Transport" type="checkbox" class="check_switch" data-size="small">
                                </div>
                            </div>
                            <div class="col-sm-3 offset-3  mt-2">
                                <div class="form-group d-none">
                                    <label class="floatLabel">Qalacağ müddət: </label>
                                    <input  type="number" class="form-control" max="365" asp-for="Staylength" autocomplete="off">
                                    <span class="messages"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 d-flex justify-content-between">
                    <button type="submit" id="confirm-id" class="btn btn-dark-blue m-b-0 btn-block">
                        Təsdiqlə
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")
<script>
    $(document).ready(function() {
        //BusnessTravel
            if($('#Accommodation').is(':checked')){
                $('#Staylength').parent().removeClass('d-none');
                $('#Staylength').prop('disabled', false);
            } else{
                $('#Staylength').parent().addClass('d-none')
                $('#Staylength').prop('disabled', true);
            }
        $(document).on('change','#Accommodation',function(){
            if($(this).is(':checked')){
                $('#Staylength').parent().removeClass('d-none');
                $('#Staylength').prop('disabled', false);
            } else{
                $('#Staylength').parent().addClass('d-none')
                $('#Staylength').prop('disabled', true);
            }
        })
    })
</script>
