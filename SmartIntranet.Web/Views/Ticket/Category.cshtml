@model TicketCategoryDto
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <input hidden class="form-control" asp-for="Id" autocomplete="off">
        <form asp-action="Category">
            <div class="col-sm-12">
                <div class="form-group">
                    <label class="floatLabel">  Kateqoriya: </label>
                    <select asp-for="CategoryTicketId" name="CategoryTicketId" class="form-control">
                        <option value="" hidden disabled selected>Seçim edin</option>
                        @foreach (var item in ViewBag.categories)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }

                    </select>
                    <span asp-validation-for="CategoryTicketId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-sm-12 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary m-b-0 btn-block">
                    Təsdiqlə
                </button>

            </div>
        </form>
    </div>
</div>
