@model CompanyAddDto

@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs  md-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab"
                   href="#home1" role="tab">
                    <i class="icofont icofont-clip"></i> &nbsp; Məlumatlar
                </a>
                <div class="slide"></div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab"
                   href="#profile1" role="tab">
                    <i class="icofont icofont-files"></i>&nbsp; Fayllar
                </a>
                <div class="slide"></div>
            </li>
        </ul>
        <!-- Tab panes -->
        <form asp-action="Add" class="main-signin-form" enctype="multipart/form-data">
            <div class="tab-content tabs card-block">
                <div class="tab-pane active" id="home1"
                     role="tabpanel">

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Ad: </label>
                                <input type="text" class="form-control" asp-for="Name" autocomplete="off">
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Təsvir: </label>
                                <input type="text" class="form-control" asp-for="Description">
                                <span class="messages"></span>
                            </div>

                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-12">
                            <label class="floatLabel">   Üst Şirkət: </label>
                            <select name="select" asp-for="ParentId" name="ParentId" class="form-control">
                                <option value="" selected disabled hidden>Seçim edin</option>
                                @foreach (var item in ViewBag.companies)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }

                            </select>
                        </div>
                    </div>




                </div>
                <div class="tab-pane" id="profile1" role="tabpanel">
                    <div class="row form-group">
                        <div class="file-name col-md-12">
                            <label for="Logo" class="btn btn-mat btn-primary"><i class="icofont icofont-cloud-upload"></i> Logo Yüklə</label>
                            <input type="file" style="visibility:hidden;" class="form-control-file pb-3 mt-3" name="logo" id="Logo" />
                        </div>
                        <div class="col-md-6  col-lg-6 col-sm-6">
                            <div class="border text-center pt-2">
                                <div class="pt-0">
                                    <label class="floatLabel">Mövcud Logo:</label>
                                    <img src="~/uploads/logoDefault.png" class="pb-2 " style="width: 150px; height: 150px;" alt="Default Logo" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 col-lg-6 col-sm-6">
                            <div id="lview" style="display:none!important;">
                                <div class="border text-center pt-2">
                                    <div class="pt-0">
                                        <label class="floatLabel">Yeni logo:</label>
                                        <img id="logoview" src="" class="pb-2" style="width: 150px; height: 150px;" />
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12 d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary m-b-0 btn-block">
                            Təsdiqlə
                        </button>

                    </div>
                </div>
            </div>
        </form>
    </div>

</div>
<!-- cust-validation js -->
<script src="~/files/lib/cust_ajax/cust-validation.js"></script>

@await Html.PartialAsync("_ValidationScriptsPartial")
<script class="removable" type="text/javascript">
    $(document).ready(function () {
        $("#Logo").change(function (e) {
        if($('.file-name').isImage())
        {
            $("#lview").show();
            $("#logoview").attr('src', URL.createObjectURL(e.target.files[0]));
        }
        else
        {
            toastr.error("Diqqət","Daxil edilən fayllar image, png və ya gif formatında olmalıdır !");
        }
        });
    });
</script>
