@model VacancyListDto

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Ətraflı </h4>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page body start -->
<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class="card-header">
                    <h3>
                        @Model.Title
                    </h3>
                     <span class="text-muted  f-14 m-b-10">   @Model.StartDate.ToString("dd  MMMM  , yyyy")  </span>
                    <div class="row">

                        <div class="col-md-6 col-sm-6">
                            <table class="table  invoice-table invoice-order table-borderless-and-padding">
                                <tbody>
                                    <tr>
                                        <th>Şəhər</th>
                                        <td>@Model.City</td>
                                    </tr>
                                    <tr>
                                        <th>İş təcrübəsi</th>
                                        <td>
                                            @Model.Occupations
                                        </td>
                                    <tr>
                                        <th>Elanın tarixi</th>
                                        <td>
                                            @Model.StartDate.ToString("MMMM dd , yyyy")
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Bitmə  tarixi</th>
                                        <td>
                                            @Model.EndDate.ToString("MMMM dd , yyyy")
                                        </td>

                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <table class="table  invoice-table invoice-order table-borderless-and-padding">
                                <tbody>
                                    @*                                    <tr>
                                        <th>Telefon</th>
                                        <td>
                                        (050) 222-22-22
                                        </td>
                                        </tr>*@
                                    <tr>
                                        <th>E-mail</th>
                                        <td>
                                            @Model.Email
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>


                </div>
                <div class="card-block">
                    <h5 class="font-weight-bold">
                        Vəzifə öhdəlikləri:
                    </h5>
                    @Html.Raw(Model.PosDesc)
                    <h5 class="font-weight-bold">
                        Tələblər:
                    </h5>
                    @Html.Raw(Model.CandidateDesc)
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-sm-12
                                                                    text-right">
                            <a href="mailto:@Model.Email"
                               class="btn
                                                                        btn-primary
                                                                        waves-effect
                                                                        btn-sm
                                                                        waves-light
                                                                        m-r-10
                                                                        m-t-10
                                                                        m-b-10">
                                Mail göndər
                            </a>
                        </div>
                    </div>
                </div>
            </div>
 
        </div>
    </div>
</div>
<!-- Page body start -->
