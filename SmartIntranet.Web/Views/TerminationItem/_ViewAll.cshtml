@model IEnumerable<TerminationItemListDto>

<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class=" contact-details">
                     <div class="data_table_main table-responsive dt-responsive pb-15">
                        <table id="simpletable"
                               class="table
                     table-striped
                     table-bordered
                     nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th class="text-center">
                                        @if (User.HasAccess("terminationItem.add"))
                                        {
                                            <button onclick="showInPopup('@Url.Action("Add","TerminationItem",null,Context.Request.Scheme)','Maddə əlavə et')" type="button" class="btn btn-outline-info"><i class="icofont icofont-plus m-0"></i></button>
                                        }
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var terminationItem in Model)
                                {

                                    <tr>
                                        <td>
                                            @terminationItem.Id
                                        </td>

                                        <td>@terminationItem.Name</td>

                                        @if (terminationItem.DeleteByUserId == null)
                                        {
                                            <td class="dropdown text-center">
                                                <button type="button"
                                                        class="btn
                                                btn-outline-info
                                                @*dropdown-toggle*@"
                                                        data-toggle="dropdown"
                                                        aria-haspopup="true"
                                                        aria-expanded="false">
                                                    <i class="fa fa-list-ul"></i>
                                                </button>
                                                <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                    @if (User.HasAccess("terminationItem.update"))
                                                    {
                                                        <li>
                                                            <button onclick="showInPopup('@Url.Action("Update","TerminationItem",new {id=terminationItem.Id},Context.Request.Scheme)','Yenilə')"
                                                                    class="w-100 text-left btn  btn-default waves-effect md-trigger text-warning">
                                                                <i class="icofont  icofont-edit text-warning  p-r-15"></i>
                                                                Yenilə
                                                            </button>
                                                        </li>
                                                    }
                                                    @if (User.HasAccess("terminationItem.delete"))
                                                    {
                                                        <li>
                                                            <button onclick="removeItem(@terminationItem.Id,`@terminationItem.Name`,`@Url.Action("Delete","TerminationItem").ToString()`)"
                                                                    class="btn btn-default waves-effect md-trigger  text-danger">
                                                                <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                                Sil
                                                            </button>
                                                        </li>
                                                    }
                                                </ul>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="dropdown text-center">
                                                <button disabled type="button"
                                                        class="btn
                                                btn-outline-danger
                                                @*dropdown-toggle*@"
                                                        data-toggle="dropdown"
                                                        aria-haspopup="true"
                                                        aria-expanded="false">
                                                    <i class="fa fa-list-ul"></i>
                                                </button>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th class="text-center">-----</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>