<script>
    $(document).ready(function($) {
        //phone number masking
        $.mask.definitions['9'] = '';
        $.mask.definitions['_'] = '[0-9]';
        $("#PhoneNumber").mask("+___ __-___-__-__", { clearMaskOnLostFocus: false, placeholder: "+___ __-___-__-__" });
        $("#HomePhoneNumber").mask("+___ __-___-__-__", { clearMaskOnLostFocus: false, placeholder: "+___ __-___-__-__" });
        $("#PersonalPhoneNumber").mask("+___ __-___-__-__", { clearMaskOnLostFocus: false, placeholder: "+___ __-___-__-__" });



        $('#demoInput4').fileInput({
            iconClass: 'mdi mdi-fw mdi-upload'
        });


        $("#demoInput4").on('change', function(e) {
            e.preventDefault();
            var formdata = new FormData();
            var _image = $('#demoInput4')[0].files[0];
            var _id = @Model.AppUserImageDto.Id;
            var token = $('input[name="__RequestVerificationToken"]').val();
            formdata.append("__RequestVerificationToken", token);
            formdata.append('profile', _image);

            swal({
                title: `Diqqət`,
                text: `Yenilənsin?`,
                icon: "warning",
                buttons: ["Xeyr", "Bəli"],
                dangerMode: true,
            }).then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        type: 'post',
                        url: '@Url.ActionLink("ImageUpdate","User")',
                        data: formdata,
                        async: false,
                        cache: false,
                        contentType: false,
                        processData: false,
                        success: function(response) {
                            //sorgu ugurla neticelenende
                            if (response.error == true) {

                                toastr.error(response, "Xəta baş verdi!");
                                return;
                            }

                            toastr.success(response, "Uğur!");
                            setTimeout(function() {
                                window.location.reload();
                            }, 1000)
                        },
                        error: function(response) {
                            //sorgu ugursuz neticelenende

                            toastr.error(response, "Xəta!");
                        }
                    });
                } else {
                    toastr.success('Əməliyat datandırıldı');
                    setTimeout(function() {
                        window.location.reload();
                    }, 1000)
                }
            });

        })

    });



</script>