@model PositionUpdateDto

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Update" class="main-signin-form">
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel">  Ad: </label>
                        <input type="text" class="form-control" asp-for="Name" autocomplete="off">
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <span class="messages"></span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="floatLabel">  Təsvir: </label>
                        <input type="text" class="form-control" asp-for="Description">
                      
                        <span class="messages"></span>
                    </div>

                </div>
            </div>
            <div class="form-group row">

                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="floatLabel">
                            Şirkət:
                        </label>
                        <select name="select" asp-for="CompanyId" name="CompanyId" class="form-control">
                            <option value="" selected disabled hidden>Seçim edin</option>
                            @foreach (var item in ViewBag.companies)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }
                        </select>
                          <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="floatLabel">
                            Şöbə:
                        </label>
                        <select name="select" asp-for="DepartmentId" name="DepartmentId" class=" form-control">
                            <option value="" selected disabled hidden>Seçim edin</option>
                            @foreach (var item in ViewBag.departments)
                            {
                                <option value="@item.Id">@item.Name</option>
                            }

                        </select>
                        <span asp-validation-for="DepartmentId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="floatLabel">
                            Üst Vəzifə:
                        </label>
                        <select name="select" asp-for="ParentId" name="ParentId" class=" form-control">
                            <option value="" selected disabled hidden>Seçim edin</option>
                            @foreach (var item in ViewBag.positions)
                            {
                                <option  value="@item.Id">@item.Name</option>
                            }

                        </select>
                    </div>
                </div>
            </div>
           @* <div class="row form-group ">
                <div class="col-sm-12 col-md-6">
                    <div class="form-radio">

                        <div class="radio radio-inline">
                            <label for="True">
                                <input type="radio" id="True" value="True" asp-for="IsDeleted"
                                       checked="checked">
                                <i class="helper"></i>Active
                            </label>
                        </div>
                        <div class="radio radio-inline">
                            <label for="False">
                                <input type="radio" id="False" value="False" asp-for="IsDeleted">
                                <i class="helper"></i>InActive
                            </label>
                        </div>

                    </div>
                </div>
            </div>*@
            <div class="form-group row">
                <div class="col-sm-12 d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary m-b-0 btn-block">
                        Təsdiqlə
                    </button>

                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")

<script class="removable">
$( document ).ready(function() {
   $(document).on('change','#CompanyId', function(){   
        var _id = $(this).val();
      $.ajax({
            type: 'Get',
            url: '@Url.ActionLink("GetDepartment","Position")',
            data: {
                companyId: _id,
            },
            success: function (response) {
                if (response.error == true) {
                    toastr.error(response.message, "Xəta baş verdi!");
                    return;
                }
                $("#DepartmentId").empty();
                var html = "";
                for (var i in response) {
                    html += `<option value="${[response[i].id]}">
                    ${[response[i].name]}</option>`
                }
                if(response.length>0)
                {
                    $("#DepartmentId").removeClass('disable');
                    $("#DepartmentId").html(`<option value="" disabled selected hidden>Seçim edin</option>`+ html);
                }
                else{
                    $("#DepartmentId").removeClass('disable');
                    $("#DepartmentId").html(`<option value="" disabled selected hidden>Yoxdur!</option>`);
                    $("#ParentId").removeClass('disable');
                    $("#ParentId").html(`<option value="" disabled selected hidden>Yoxdur!</option>`);
                    
                }
            },
            error: function (response) {
                $("#overlay").fadeOut(300);
                toastr.error("Gözlənilməz xəta baş verdi", "Xəta!");
            }
        });
   });
   $(document).on('change','#DepartmentId', function(){   
        var _id = $(this).val();
      $.ajax({
            type: 'Get',
            url: '@Url.ActionLink("GetPosition","Position")',
            data: {
                departmentId: _id,
            },
            success: function (response) {
                if (response.error == true) {
                    toastr.error(response.message, "Xəta baş verdi!");
                    return;
                }
                $("#ParentId").empty();
                var html = "";
                for (var i in response) {
                    html += `<option value="${[response[i].id]}">
                    ${[response[i].name]}</option>`
                }
                if(response.length>0)
                {
                    $("#ParentId").removeClass('disable');
                    $("#ParentId").html(`<option value="" disabled selected hidden>Seçim edin</option>`+ html);
                }
                else{
                    $("#ParentId").removeClass('disable');
                    $("#ParentId").html(`<option value="" disabled selected hidden>Yoxdur!</option>`+ html);
                }
            },
            error: function (response) {
                toastr.error("Gözlənilməz xəta baş verdi", "Xəta!");
            }
        });
   });
});
</script>