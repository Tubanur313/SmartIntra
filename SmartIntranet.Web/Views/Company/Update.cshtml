@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@functions {
    public string GetAntiXsrfRequestToken()
    {
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    }
}
@model CompanyUpdateDto

@{
    Layout = null;
}
<link rel="stylesheet" type="text/css" href="~/files/lib/jquery-easyui-1.10.4/themes/bootstrap/easyui.css">
<div class="row">

    <div class="col-lg-12 col-xl-12">
        <!-- Nav tabs -->
        <ul class="nav tabs nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab"
                   href="#home1" role="tab">Məlumatlar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab"
                   href="#profile1" role="tab">Fayllar</a>
            </li>

        </ul>
        <!-- Tab panes -->
        <form asp-action="Update" enctype="multipart/form-data" class="main-signin-form">
            <div class="tab-content tabs">
                <div class="tab-pane active" id="home1"
                     role="tabpanel">
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Ad: </label>
                                <input type="text" class="form-control" asp-for="Name" autocomplete="off">
                                <span asp-validation-for="Name" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Təsvir: </label>
                                <input type="text" class="form-control" asp-for="Description">
                                @*<span asp-validation-for="Surname" class="text-danger"></span>*@
                                <span class="messages"></span>
                            </div>

                        </div>
                        <div class="col-sm-6">
                            <label class="floatLabel">   Üst Şirkət: </label>
                            <div class="selectedId" style="margin-bottom:20px">
                                <input type="text" class="form-control" asp-for="ParentId" name="ParentId" style="width:100%">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">   Rəhbər: </label>
                                <select asp-for="LeaderId" class="form-control">
                                    <option value="" selected hidden>Seçim edin</option>
                                    @foreach (var item in ViewBag.Leader)
                                    {
                                        <option value="@item.Id">@item.Name @item.Surname @item.Fathername</option>
                                    }
                                </select>
                                <span asp-validation-for="LeaderId" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Şirkətin rəhbərinin vəzifəsi: </label>
                                <input type="text" class="form-control" asp-for="LeaderPosition" autocomplete="off">
                                <span asp-validation-for="LeaderPosition" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Şirkətin VÖEN-i: </label>
                                <input type="text" class="form-control" asp-for="Tin" autocomplete="off">
                                <span asp-validation-for="Tin" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Şirkətin hüquqi ünvanı: </label>
                                <input type="text" class="form-control" asp-for="Address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Şirkətin bank hesabının nömrəsi: </label>
                                <input type="text" class="form-control" asp-for="BankAccountNumber" autocomplete="off">
                                <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Bankın adı: </label>
                                <input type="text" class="form-control" asp-for="BankName">
                                <span asp-validation-for="BankName" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Bankın VÖEN-i: </label>
                                <input type="text" class="form-control" asp-for="BankTin" autocomplete="off">
                                <span asp-validation-for="BankTin" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Bankın kodu: </label>
                                <input type="text" class="form-control" asp-for="BankCode">
                                <span asp-validation-for="BankCode" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Bankın SWIFT kodu: </label>
                                <input type="text" class="form-control" asp-for="SWIFTCode" autocomplete="off">
                                <span asp-validation-for="SWIFTCode" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="floatLabel">  Müxbir hesabının nömrəsi: </label>
                                <input type="text" class="form-control" asp-for="CorrespondentAccountNumber">
                                <span asp-validation-for="CorrespondentAccountNumber" class="text-danger"></span>
                                <span class="messages"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="profile1" role="tabpanel">
                    <div class="row">
                        <div class="file-name col-sm-12 form-group ">
                            <label for="Logo" class="btn btn-mat btn-primary"><i class="icofont icofont-cloud-upload"></i> Logo Yüklə</label>
                            <input type="file" style="display:none;" class="form-control-file pb-3 mt-3" name="logo" id="Logo" />
                        </div>
                        <div class="col-md-6  col-lg-6 col-sm-6 form-group">
                            @if (Model.LogoPath != null && Model.LogoPath.Length > 0 && Model.LogoPath != "logoDefault.png")
                            {
                                <div class="border text-center pt-2">
                                    <div class="pt-0">
                                        <label class="floatLabel">Mövcud Logo:</label>
                                        <img src="~/logo/@Model.LogoPath" class="pb-2" style="width: 150px; height: 150px;" alt="@Model.Name" />
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="border text-center pt-2">
                                    <div class="pt-0">
                                        <label class="floatLabel">Mövcud Logo:</label>
                                        <img src="~/uploads/logoDefault.png" class="pb-2 " style="width: 150px; height: 150px;" alt="Default Logo" />
                                    </div>
                                </div>
                            }

                        </div>

                        <div class="col-md-6 col-lg-6 col-sm-6 form-group">
                            <div id="lview" style="display:none!important;">
                                <div class="border text-center pt-2">
                                    <div class="pt-0">
                                        <label class="floatLabel">Yeni logo:</label>
                                        <img id="logoview" src="" class="pb-2" style="width: 150px; height: 150px;" alt=""/>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-12 d-flex justify-content-between">
                        <button type="submit" id="confirm-id" class="btn btn-dark-blue m-b-0 btn-block">
                            Təsdiqlə
                        </button>

                    </div>
                </div>
            </div>
        </form>
    </div>

</div>
<!-- cust-validation js -->
<script src="~/files/lib/cust_ajax/cust-validation.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")
<script type="text/javascript" src="~/files/lib/jquery-easyui-1.10.4/jquery.easyui.min.js"></script>
<script class="removable" type="text/javascript">
    $(document).ready(function ($) {
        $("#Logo").change(function (e) {
        if($('.file-name').isImage())
        {
            $("#lview").show();
            $("#logoview").attr('src', URL.createObjectURL(e.target.files[0]));
        }
        else
        {
            toastr.error("Diqqət","Daxil edilən fayllar image, png və ya gif formatında olmalıdır !");
        }
        });
        var defOpt = {
            id: '',
            text: 'Yoxdur'
        };
        $.ajax({
            url: `@Url.Action("GetCompanyTree","Company")`,
            type: "Get",
            data: "",
            dataType: "json",
            cache: false,
            success: function (data) {
                $('#ParentId').combotree({
                    data: [defOpt, ...data],
                    prompt:'Seçim edin'
                });
                if($('[name="ParentId"]').val()===""){
                 $('#ParentId')
                     .combotree('setValue', {
                      id: null,
                      text: 'Yoxdur'
                     });
                }
            },
            error: function (data) {
            }
        });
        $("form").submit(function (e){
            var val = $('#ParentId')
               .combotree('getValue');
            $('#ParentId').val($('[name="ParentId"]').val());
        });
    });
</script>
