                                                            <div class="form-group">
                                                                <div id="image_preview" class="row" @*style="width:100%;"*@>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
