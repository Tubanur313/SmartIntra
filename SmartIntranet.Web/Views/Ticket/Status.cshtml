@model TicketStatusDto
@{
    Layout = null;
}

<div class="row">
    <div class="col-lg-12 col-xl-12">
        <form asp-action="Status">
            <div class="form-group">
                <input hidden class="form-control" asp-for="Id" autocomplete="off">
                <label class="floatLabel">  Status: </label>
                <select name="select" asp-for="StatusType" name="StatusType" class="form-control">
                    <option value="" selected hidden>Seçim edin</option>
                    @foreach (StatusType type in @Enum.GetValues(typeof(StatusType)))
                    {
                        <option value="@type">@type.GetDisplayName()</option>
                    }

                </select>
                <span asp-validation-for="StatusType" class="text-danger"></span>
            </div>
            <div class="col-sm-12 d-flex justify-content-between">
                <button type="submit" id="confirm-id" class="btn btn-primary m-b-0 btn-block">
                    Təsdiqlə
                </button>

            </div>
        </form>
    </div>
</div>
