@model IEnumerable<ArchiveListDto>

<div class="page-body">
    <div class="row">
        <!-- Left column start -->
        <div class="col-lg-12 col-xl-12">
            <!-- Job description card start -->
            <div class="card">
                <div class="card-block contact-details">
                    <div class="data_table_main table-responsive dt-responsive">
                        <table id="simpletable"
                               class="table table-striped table-bordered nowrap">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>Şirkət/Şöbə</th>
                                    <th>Əlavə edən</th>
                                    <th>Yükləmə</th>
                                    <th class="text-center">
                                        @if (User.HasAccess("archive.add"))
                                        {
                                            <button onclick="showInPopup('@Url.Action("Add","Archive",null,Context.Request.Scheme)','Arxiv əlavə et')" type="button" class="btn btn-outline-success rounded-circle"><i class="icofont icofont-plus m-0"></i></button>
                                        }
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var archive in Model)
                                {

                                    <tr>
                                        <td>
                                            @archive.Id
                                        </td>
                                        <td>@archive.Name</td>
                                        <td>
                                            @(archive.CompanyId!=null?archive.Company.Name:"Təyin edilməyib")|
                                            @(archive.DepartmentId!=null?archive.Department.Name:"Təyin edilməyib")
                                        </td>
                                        <td>@(archive.AddedByUserId!=null?archive.AddedByUser.Fullname:"Təyin edilməyib")</td>
                                        <td>
                                            @if (!archive.IsDeleted)
                                            {
                                                <a class="pl-4" target="_blank" href="~/archive/@archive.File" download>
                                                    <i class="fa fa-download" aria-hidden="true" style="color: #404E67"></i>
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="pl-4 disable">
                                                    <i class="fa fa-download" aria-hidden="true" style="color: #404E67"></i>
                                                </a>
                                            }
                                        </td>
                                        @if (!archive.IsDeleted)
                                        {
                                            <td class="dropdown text-center">
                                                <button type="button"
                                                class="btn
                                                btn-outline-info
                                                @*dropdown-toggle*@"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                    <i class="fa fa-list-ul"></i>
                                                </button>
                                                <ul class="dropdown-menu   dropdown-menu-right  b-none   contact-menu ">
                                                    @if (User.HasAccess("archive.update"))
                                                    {
                                                        <li>
                                                            <button onclick="showInPopup('@Url.Action("Update","Archive",new {id=archive.Id},Context.Request.Scheme)','Yenilə')"
                                                        class="btn  btn-default waves-effect md-trigger text-warning">
                                                                <i class="icofont  icofont-edit text-warning  p-r-15"></i>
                                                                Yenilə
                                                            </button>
                                                        </li>
                                                    }
                                                    @if (User.HasAccess("archive.delete"))
                                                    {
                                                        <li>
                                                            <button onclick="removeItem(@archive.Id,`@archive.Name`,`@Url.Action("Delete","Archive").ToString()`)"
                                                        class="btn btn-default waves-effect md-trigger  text-danger">
                                                                <i class="icofont icofont-ui-delete text-danger p-r-15"></i>
                                                                Sil
                                                            </button>
                                                        </li>
                                                    }

                                                </ul>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="dropdown text-center">
                                                <button disabled type="button"
                                                class="btn
                                                btn-outline-danger
                                                @*dropdown-toggle*@"
                                                data-toggle="dropdown"
                                                aria-haspopup="true"
                                                aria-expanded="false">
                                                    <i class="fa fa-list-ul"></i>
                                                </button>
                                            </td>
                                        }

                                    </tr>

                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Id</th>
                                    <th>Ad</th>
                                    <th>Şirkət/Şöbə</th>
                                    <th>Əlavə edən</th>
                                    <th>Yükləmə</th>
                                    <th class="text-center">-----</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>